header.header
    .header__wrapper
        .header__column
            a(href=routes.home)
                i.fas.fa-record-vinyl
                span enbanded
        .header__column
            form(action=routes.search, method="get")
                input(type="text", placeholder="Search by term...", name="term")
        .header__column
            ul
                if !loggedUser
                    li 
                        a(href=routes.join) Join
                    li 
                        a(href=routes.login) Log in
                else
                    li 
                        a(href=`${routes.videos}${routes.upload}`) Upload
                    li 
                        a(href=routes.me) Profile
                    li 
                        a(href=routes.logout) Log Out